{
  "name": "Toggle 3rd Party Cookies",
  "version": "1.1",
  "description": "Toggle the setting 'Block 3rd Party Cookies'",
  "permissions": ["privacy", "notifications"],
  "background": {
    "service_worker": "background.js"
